<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/friend_row_profilePic"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/friend_row_name"
        android:layout_toRightOf="@id/friend_row_profilePic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/friend_row_name"
        android:textSize="14sp"
        android:id="@+id/friend_row_email"
        android:layout_below="@id/friend_row_name"
        android:layout_toRightOf="@id/friend_row_profilePic"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Add"
        android:id="@+id/friend_row_addBtn"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/friend_row_request_sent"
        android:textSize="12dp"
        android:text="Friend Request Sent"/>

</RelativeLayout>